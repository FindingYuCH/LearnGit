KISSY.add("components/fixed_head/index",function(t,i){var e=t.all,o=i.extend({bindUI:function(){var t=this.get("el");this._fixHead(t);var i=this;this.detect=function(){i._fixHead(t)},e(window).on("scroll",this.detect)},destroy:function(){e(window).detach("scroll",this.detect)},_fixHead:function(t){var i=t.one(".table-head-fix");if(i){var o=t.one(".table[bx-name]");if(o){var n=e(window).scrollTop(),s=o.offset(),a=t.width(),d=t.height();n>=s.top?(t.addClass("table-container-fix"),n>=s.top+d-150?i.css({position:"absolute",width:a,left:0,top:d-150}):(t.css({paddingTop:i.height()}),i.css({position:"fixed",width:a,left:s.left,top:0}))):(t.removeClass("table-container-fix"),t.css({paddingTop:0}),i.css({position:"static",width:"auto",left:"0",top:0}))}}}},{ATTRS:{},EVENTS:{}});return o},{requires:["brix/core/brick","magix/router"]});